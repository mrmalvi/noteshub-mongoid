<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="card-title text-center mb-4">Login to Your Account</h3>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>

            <div class="mb-3">
              <%= f.input :login,
                          label: "Username or Email",
                          placeholder: "Enter your username or email",
                          input_html: { class: "form-control", autofocus: true } %>
            </div>

            <div class="mb-3">
              <%= f.input :password,
                          label: "Password",
                          placeholder: "Enter your password",
                          input_html: { class: "form-control" } %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.input :remember_me,
                            as: :boolean,
                            label: "Remember me",
                            input_html: { class: "form-check-input" },
                            label_html: { class: "form-check-label" } %>
              </div>
            <% end %>

            <div class="d-grid mb-3">
              <%= f.button :submit, "Sign In", class: "btn btn-primary btn-lg" %>
            </div>

          <% end %>

          <hr>

          <div class="text-center">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "d-block mb-2" %>
            <%= link_to "Create a new account", new_registration_path(resource_name), class: "btn btn-outline-secondary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
