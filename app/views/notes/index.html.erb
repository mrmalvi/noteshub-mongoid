<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">üìù Notes</h1>
    <%= link_to "New Note", new_note_path, class: "btn btn-primary" %>
  </div>

  <% if @notes.any? %>
    <div class="row">
      <% @notes.each do |note| %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to note.title, note, class: "text-decoration-none text-primary" %>
              </h5>
              <p class="card-text text-muted">
                <%= note.content.truncate(100) %>
              </p>
            </div>
            <div class="card-footer bg-transparent border-top d-flex justify-content-between">
              <%= link_to "Edit", edit_note_path(note), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Show", note_path(note), class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "Delete", note_path(note),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-sm btn-outline-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center">
      No notes yet. <%= link_to "Create one", new_note_path, class: "alert-link" %>!
    </div>
  <% end %>
</div>
